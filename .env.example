# PageForge Environment Configuration

# MongoDB
MONGODB_URI=mongodb://localhost:27017/pageforge

# Redis
REDIS_URL=redis://localhost:6379

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=pageforge
MINIO_SECRET_KEY=pageforge-secret
MINIO_BUCKET=pageforge-artifacts
MINIO_USE_SSL=false

# Caddy
CADDY_ADMIN_URL=http://localhost:2019

# MinIO internal URL as seen from inside the Docker network (used in Caddy routes)
MINIO_INTERNAL_URL=http://pageforge-minio:9000

# PageForge
PAGEFORGE_DOMAIN=pageforge.local
NEXT_PUBLIC_PAGEFORGE_DOMAIN=pageforge.local
PAGEFORGE_PORT=3000

# Docker
DOCKER_SOCKET_PATH=/var/run/docker.sock
BUILD_MEMORY_LIMIT=536870912
BUILD_CPU_LIMIT=1000000000
BUILD_IMAGE=node:20-alpine
GVISOR_ENABLED=false

# Cloudflare Tunnel (leave empty for local-only mode)
# Paste your tunnel token here, then use: pnpm infra:tunnel
CLOUDFLARE_TUNNEL_TOKEN=
